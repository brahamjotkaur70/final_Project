<% if @product.errors.any? %>
   <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @product do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
     <div class="form-group">
      <%=f.label "image" %>
      <%= f.file_field :avatar %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name, @category_id), { include_blank: true }, class: 'form-control' %>
  </div>
    <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
</div>
<%= hidden_field_tag 'product[user_id]', current_user.id %>
    <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control" %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
<% end %>