<section class="container cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>


  <% if @cart.blank? %>

  <div class="alert alert-warning" role="alert">
   Your cart is empty,buy something!
  </div>

   <% else %>
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_total = 0 %>
        <% @cart.line_items.each do |line_item| %>
          <%= render 'item', line_item: line_item %>
          <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= @cart_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'cart_id', @cart.id %>
        <%= hidden_field_tag 'cart_total', @cart_total %>
        <%= submit_tag 'Place Order', class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
  <% end %>

  <br>
  <br>

</section>
